<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_food_term"
        android:background="@drawable/bg_food1"
        android:scaleType="centerCrop"
        android:layout_marginTop="-100dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Terms and Conditions"
        android:id="@+id/txt_header"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#3ea600"
        android:background="#efefef" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:layout_below="@+id/txt_header"
        android:id="@+id/layout_mask"
        android:elevation="1dp"></LinearLayout>

    <com.customlist2.view.ExpandableHeightGridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grd_terms"
        android:numColumns="3"
        android:layout_below="@+id/txt_header"
        android:paddingBottom="30dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/decorator_up" />

</RelativeLayout>